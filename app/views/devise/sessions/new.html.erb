<% provide(:title, 'Login') %>
<div class="mdl-layout__jumbo mdl-layout__index mdl-color--primary">
    <div class="mdl-layout__header-row"></div>
    <div class="mdl-layout__header-row">
        <h1>Login to Sex+</h1>
    </div>
    <div class="mdl-layout__header-row">
        Welcome back!
    </div>
    <div class="mdl-layout__header-row"></div>
</div>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <section class="section--center mdl-grid">
      <div class="mdl-card mdl-card--fixed-height-title mdl-cell mdl-cell--4-col-desktop mdl-cell--4-offset-desktop mdl-cell--8-col-tablet mdl-shadow--2dp">
          <div class="mdl-card__title mdl-card--expand mdl-card__title--image mdl-card__title--survey">
              <h2 class="mdl-card__title-text">
                We just need a little info...
              </h2>
          </div>
          <div class="mdl-card__supporting-text">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--card">
                <%= f.text_field :name, class: 'mdl-textfield__input', autofocus: true %>
                <%= f.label :name, class: "mdl-textfield__label", placeholder: "Georgie O'keefe" %>
            </div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--card">
                <%= f.password_field :password, class: 'mdl-textfield__input', autocomplete: 'off' %>
                <%= f.label :password, class: "mdl-textfield__label" %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <%= f.label :remember_me, class: 'mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect' do %>
                <%= f.check_box :remember_me, class: 'mdl-checkbox__input' %>
                <span class="mdl-checkbox__label">Remember me</span>
              <% end %>
            <% end -%>

            <div class="actions">
              <%= f.submit "Login", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
            </div>
          </div>
      </div>
  </section>
<% end %>

<%= render "devise/shared/links" %>
