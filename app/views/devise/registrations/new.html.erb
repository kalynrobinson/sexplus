<% provide(:title, 'Sign Up') %>
<div class="mdl-layout__jumbo mdl-layout__index mdl-color--primary">
    <div class="mdl-layout__header-row"></div>
    <div class="mdl-layout__header-row">
        <h1>Sign Up for Sex+</h1>
    </div>
    <div class="mdl-layout__header-row">
        Create an account to save your surveys.
    </div>
    <div class="mdl-layout__header-row"></div>
</div>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <section class="section--center mdl-grid">
      <div class="mdl-layout-spacer"></div>
      <div class="mdl-card mdl-card--fixed-height-title mdl-cell mdl-cell--4-col-desktop mdl-cell--8-col-tablet mdl-shadow--2dp">
          <div class="mdl-card__title mdl-card--expand mdl-card__title--image mdl-card__title--survey">
              <h2 class="mdl-card__title-text">
                We just need a little info...
              </h2>
          </div>
          <div class="mdl-card__supporting-text">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--card">
                <%= f.text_field :name, class: 'mdl-textfield__input', autofocus: true %>
                <%= f.label :name, class: "mdl-textfield__label", placeholder: "Georgie O'keefe" %>
            </div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--card">
                <%= f.email_field :email, class: 'mdl-textfield__input' %>
                <%= f.label :email, class: "mdl-textfield__label", placeholder: "georgiaokeeffe@example.com" %>
            </div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--card">
                <%= f.password_field :password, class: 'mdl-textfield__input', autocomplete: 'off' %>
                <%= f.label :password, "Password (#{@minimum_password_length} characters minimum)", class: "mdl-textfield__label" %>
            </div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--card">
                <%= f.password_field :password_confirmation, class: 'mdl-textfield__input', autocomplete: 'off' %>
                <%= f.label :password_confirmation, class: "mdl-textfield__label" %>
            </div>

            <div class="actions">
              <%= f.submit "Sign up", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
            </div>
          </div>
      </div>
      <div class="mdl-layout-spacer"></div>
  </section>
<% end %>

<%= render "devise/shared/links" %>
