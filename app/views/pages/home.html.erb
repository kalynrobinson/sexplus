<div class="mdl-layout__jumbo mdl-layout__index mdl-color--primary">
    <div class="mdl-layout__header-row"></div>
    <div class="mdl-layout__header-row">
        <h1>Sex+</h1>
    </div>
    <div class="mdl-layout__header-row">
        Redefining healthy communication. Tagline here.
    </div>
    <% unless user_signed_in? %>
      <div class="mdl-layout__header-row">
          <div class="mdl-layout-spacer"></div>
          <%= link_to "Sign up now", new_user_registration_path,
              class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
          <div class="mdl-layout-spacer"></div>
      </div>
    <% end %>
    <div class="mdl-layout__header-row"></div>
</div>

<section class="section--center mdl-grid">

    <%= render 'shared/flash' %>

    <div class="mdl-card mdl-card--fixed-height-title mdl-card--fixed-height-text
                mdl-cell mdl-cell--4-col-desktop mdl-cell--8-col-tablet mdl-shadow--2dp">
        <div class="mdl-card__title mdl-card--expand mdl-card__title--image mdl-card__title--survey">
            <h2 class="mdl-card__title-text">Survey</h2>
        </div>
        <div class="mdl-card__supporting-text">
            Discover and share sexual interests with your partner! Customize the survey to be as kinky or as granular as you want.
        </div>
        <div class="mdl-card__actions mdl-card--border">
            <%= link_to 'Take Survey', new_survey_path, class: 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' %>
        </div>
    </div>
    <div class="mdl-card mdl-card--fixed-height-title mdl-card--fixed-height-text mdl-cell mdl-cell--4-col  mdl-shadow--2dp">
        <div class="mdl-card__title mdl-card--expand mdl-card__title--image mdl-card__title--compendium">
            <h2 class="mdl-card__title-text">Compendium</h2>
        </div>
        <div class="mdl-card__supporting-text">
            Learn about new sex acts, kinks, and jargon in an easy-to-search database.
        </div>
        <div class="mdl-card__actions mdl-card--border">
            <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                View Compendium
            </a>
        </div>
    </div>
    <div class="mdl-card mdl-card--fixed-height-title mdl-card--fixed-height-text mdl-cell mdl-cell--4-col  mdl-shadow--2dp">
        <div class="mdl-card__title mdl-card--expand mdl-card__title--image mdl-card__title--articles">
            <h2 class="mdl-card__title-text">Articles</h2>
        </div>
        <div class="mdl-card__supporting-text">
            Read articles on a variety of topics, including effective communication, kink safety guidelines, and sex myths.
        </div>
        <div class="mdl-card__actions mdl-card--border">
            <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                View Updates
            </a>
        </div>
    </div>
</section>
