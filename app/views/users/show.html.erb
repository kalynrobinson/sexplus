<% provide(:title, @user.name) %>
<div class="mdl-card mdl-card--fixed-height-title mdl-card--fixed-height-text mdl-cell
            mdl-cell--4-col-desktop mdl-cell--4-offset-desktop mdl-cell--8-col-tablet mdl-shadow--2dp">
  <div class="mdl-card__title mdl-card--expand mdl-card__title--image mdl-card__title--user">
    <h2 class="mdl-card__title-text"><%= @user.name %></h2>
  </div>
  <div class="mdl-card__supporting-text">

    <strong>Email</strong>
    <% unless @user.email.blank? %>
      <%= @user.email %>
    <% else %>
      You don't have an email address! Add one to recover your password in the future.
    <% end %>

  </div>
  <% if current_user == @user %>
    <div class="mdl-card__actions mdl-card--border">
      <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
        Surveys
      </a>

      <%= link_to "Edit Profile", edit_user_registration_path,
          class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
    </div>
  <% end %>
</div>
